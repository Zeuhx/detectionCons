<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="descartes.info.l3ag2.eyetrek.fragment.FragmentSignIn"
    android:background="@drawable/bg_connexion">

    <RelativeLayout
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent_black">

        <TextView

            android:id="@+id/signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:text="Inscription"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            />

        <EditText
            android:id="@+id/last_name"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/signup"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:hint="Nom"
            android:drawableLeft="@drawable/ic_action_name"
            android:background="@drawable/button_whiteborder"
            android:padding="5dp"
            android:textColorHint="@color/white"
            android:textColor="@color/darkgray"
            />

        <EditText
            android:id="@+id/first_name"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/last_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:hint="Prénom"
            android:drawableLeft="@drawable/ic_action_name"
            android:background="@drawable/button_whiteborder"
            android:padding="5dp"
            android:textColorHint="@color/white"
            android:textColor="@color/darkgray"
            />

        <TextView
            android:id="@+id/birthday"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/first_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:hint="Âge"
            android:textSize="18sp"
            android:drawableLeft="@drawable/ic_action_age"
            android:background="@drawable/button_whiteborder"
            android:padding="5dp"
            android:textColorHint="@color/white"
            android:textColor="@color/darkgray"


            />


        <EditText
            android:id="@+id/year_exp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/birthday"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:hint="Année d'expérience"
            android:inputType="number"
            android:maxLength="2"
            android:background="@drawable/button_whiteborder"
            android:padding="5dp"
            android:textColorHint="@color/white"
            android:textColor="@color/darkgray"
            android:drawableLeft="@drawable/ic_action_age"
            />

        <EditText
            android:id="@+id/email_signup"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/year_exp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:hint="E-mail"
            android:drawableLeft="@drawable/ic_action_logname"
            android:background="@drawable/button_whiteborder"
            android:padding="5dp"
            android:textColorHint="@color/white"
            android:textColor="@color/darkgray"/>

        <EditText
            android:id="@+id/password_signup"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email_signup"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:hint="Mot de passe"
            android:inputType="textPassword"
            android:drawableLeft="@drawable/ic_action_password"
            android:background="@drawable/button_whiteborder"
            android:padding="5dp"
            android:textColorHint="@color/white"
            android:textColor="@color/darkgray"/>

        <EditText
            android:id="@+id/password2_signup"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/password_signup"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:hint="Retaper mot de passe"
            android:inputType="textPassword"
            android:drawableLeft="@drawable/ic_action_password"
            android:background="@drawable/button_whiteborder"
            android:padding="5dp"
            android:textColorHint="@color/white"
            android:textColor="@color/darkgray"/>
        <Button
            android:id="@+id/signup_button"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/password2_signup"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:text="S'inscrire"
            android:background="@drawable/button_whiteborder"
            android:textColor="@color/white"
            android:padding="10dp"/>
    </RelativeLayout>

</RelativeLayout>
