<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_connexion"
    tools:context="descartes.info.l3ag2.eyetrek.fragment.FragmentSignIn">

    <RelativeLayout
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent_black"
        >
        <TextView
            android:id="@+id/signin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dp"
            android:text="@string/connexion"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:textSize="28sp"
            android:textStyle="bold"/>

        <EditText
            android:background="@drawable/button_whiteborder"
            android:id="@+id/email"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="56dp"
            android:layout_below="@id/signin"
            android:layout_centerHorizontal="true"
            android:hint="E-mail"
            android:textColorHint="@color/white"
            android:drawableLeft="@drawable/ic_action_logname"
            android:textColor="@color/red_record"
            android:textColorHighlight="@color/red_record"
            android:padding="2dp"/>
            />

        <EditText
            android:background="@drawable/button_whiteborder"
            android:id="@+id/password"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:hint="@string/password"
            android:layout_below="@id/email"
            android:layout_centerHorizontal="true"
            android:inputType="textPassword"
            android:textColorHint="@color/white"
            android:drawableLeft="@drawable/ic_action_password"
            android:textColor="@color/red_record"
            android:textColorHighlight="@color/red_record"
            android:padding="2dp"/>

        <Button
            android:id="@+id/signin_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:padding="5dp"
            android:layout_below="@id/password"
            android:layout_centerHorizontal="true"
            android:text="@string/connexion"
            android:textColor="@color/white"
            android:background="@drawable/button_whiteborder"

            />
    </RelativeLayout>

</RelativeLayout>
