<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/fond_menu"
    tools:context="descartes.info.l3ag2.eyetrek.fragment.FragmentSignIn">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="@color/transparent_black">

        <TextView

            android:id="@+id/signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:text="Inscription"
            android:textColor="@color/white"
            android:textSize="40sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/last_name2"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/signup"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:background="@drawable/button_whiteborder"
            android:clickable="true"
            android:drawableLeft="@drawable/ic_action_name"
            android:foreground="?android:attr/selectableItemBackground"
            android:hint="Nom"
            android:padding="5dp"
            android:textColor="@color/white"
            android:textColorHint="@color/darkgray"
            android:textColorLink="@color/white" />

        <EditText
            android:id="@+id/first_name2"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/last_name2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:background="@drawable/button_whiteborder"
            android:drawableLeft="@drawable/ic_action_name"
            android:hint="Prénom"
            android:padding="5dp"
            android:textColor="@color/white"
            android:textColorHint="@color/darkgray" />

        <EditText
            android:id="@+id/birthday2"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/first_name2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:background="@drawable/button_whiteborder"
            android:drawableLeft="@drawable/ic_action_age"
            android:hint="Âge"
            android:padding="5dp"
            android:textColor="@color/white"
            android:textColorHint="@color/darkgray"
            android:textSize="18sp"


            />


        <EditText
            android:id="@+id/year_exp2"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/birthday2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_whiteborder"
            android:clickable="true"
            android:drawableLeft="@drawable/ic_action_age"
            android:foreground="?android:attr/selectableItemBackground"
            android:hint="Années d'expérience"
            android:inputType="number"
            android:maxLength="2"
            android:padding="5dp"
            android:textColor="@color/white"
            android:textColorHint="@color/darkgray" />

        <EditText
            android:id="@+id/email_signup2"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/year_exp2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_whiteborder"
            android:clickable="true"
            android:drawableLeft="@drawable/ic_action_logname"
            android:foreground="?android:attr/selectableItemBackground"
            android:hint="E-mail"
            android:padding="5dp"
            android:textColor="@color/white"
            android:textColorHint="@color/darkgray" />

        <EditText
            android:id="@+id/password_signup2"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email_signup2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_whiteborder"
            android:clickable="true"
            android:drawableLeft="@drawable/ic_action_password"
            android:foreground="?android:attr/selectableItemBackground"
            android:hint="Mot de passe"
            android:inputType="textPassword"
            android:padding="5dp"
            android:textColor="@color/white"
            android:textColorHint="@color/darkgray" />

        <EditText
            android:id="@+id/password2_signup2"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/password_signup2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:background="@drawable/button_whiteborder"
            android:drawableLeft="@drawable/ic_action_password"
            android:hint="Retaper mot de passe"
            android:inputType="textPassword"
            android:padding="5dp"
            android:textColor="@color/white"
            android:textColorHint="@color/darkgray" />

        <android.support.v7.widget.CardView
            android:id="@+id/signup_button2"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_below="@+id/password2_signup2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="25dp"
            app:cardElevation="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:text="@string/bouton_sinscrire"
                android:textColor="@color/black" />
        </android.support.v7.widget.CardView>

    </RelativeLayout>

</RelativeLayout>
